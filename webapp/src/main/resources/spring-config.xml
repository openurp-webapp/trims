<?xml version="1.0" encoding="UTF-8"?>
<beans>

  <bean id="HibernateConfig.default">
    <property name="properties">
      <props merge="true">
        <prop key="hibernate.show_sql">false</prop>
        <!-- <prop key="hibernate.hbm2ddl.auto">update</prop> <prop key="hibernate.default_schema">security</prop> -->
        <prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</prop>
      </props>
    </property>
  </bean>
  
  <bean id="security.TicketValidator.neusoft" class="org.beangle.security.realm.cas.TicketValidator" primary="true"/>

  <bean id="security.EntryPoint.cas" class="org.beangle.security.web.EntryPoint"  primary="true"/>
  
    <bean id="web.Interceptor.security">
      <constructor-arg >
        <list>
<ref bean="security.Filter.cas"/>
<ref bean="security.Filter.authorization"/>
        </list>
      </constructor-arg>
      <constructor-arg value="?"/>
      <constructor-arg value="?"/>
      <constructor-arg value="?"/>
  </bean>

  <bean id="security.Authenticator.realm">
    <constructor-arg>
     <list>
       <ref bean="security.Realm.cas"/>
     </list>
    </constructor-arg>
  </bean>
</beans>